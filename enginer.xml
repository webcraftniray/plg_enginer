<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="system" method="upgrade" >
    <name>Enginer</name>
    <author>Ray Lawlor</author>
    <creationDate>Januarary 2015</creationDate>
    <copyright>Copyright (C) 2015 Ray Lawlor - ZOOModsPlus.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPLv2 only</license>
    <authorEmail>ray@zoomodsplus.com</authorEmail>
    <authorUrl>http://www.zoomodsplus.com</authorUrl>
    <version>1.0.0</version>
    <description>Changes the Storage engine in the MySQL Database</description>
    <files>
        <filename plugin="enginer">enginer.php</filename>
        <filename>enginer.xml</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="engine" type="list"                                      
                       description="Select what Engine to use"                             
                       label="Set Engine"
                       default="MyISAM">
                    <option value="InnoDB">InnoDB</option>
                    <option value="MyISAM">MyISAM</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>